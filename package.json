{
  "name": "whitespace-tools",
  "version": "1.1.0",
  "engines": {
    "node": ">=8.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "description": "Line ending and beginning-of-line whitespace space correction tools",
  "repository": "https://github.com/jlyonsmith/whitespace-tools.git",
  "files": [
    "dist/**"
  ],
  "bin": {
    "ender": "dist/ender-cli.js",
    "spacer": "dist/spacer-cli.js"
  },
  "scripts": {
    "build": "babel src -d dist -s --ignore *.test.js",
    "debug:ender": "babel-node --inspect-brk src/ender-cli.js",
    "debug:spacer": "babel-node --inspect-brk src/spacer-cli.js",
    "test": "jest",
    "test:debug": "babel-node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand"
  },
  "jest": {
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "node_modules/",
      "scratch/",
      "dist/"
    ]
  },
  "keywords": [
    "end",
    "space",
    "code"
  ],
  "author": "John Lyon-Smith",
  "license": "MIT",
  "dependencies": {
    "autobind-decorator": "^2.4.0",
    "chalk": "^2.4.2",
    "concat-stream": "^2.0.0",
    "minimist": "^1.2.0",
    "tempy": "^0.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/node": "^7.7.0",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-decorators": "^7.7.0",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "@babel/plugin-syntax-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.7.1",
    "jest-cli": "^24.9.0"
  }
}
